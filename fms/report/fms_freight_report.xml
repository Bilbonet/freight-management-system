<?xml version="1.0"?>
<odoo>

    <report
        id="fms_freight_report_action"
        string="Print Freight"
        model="fms.freight"
        report_type="qweb-pdf"
        file="fms.fms_freight_report"
        name="fms.fms_freight_report"
        print_report_name="object.name"
    />

<template id="fms_freight_report_document">
    <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
        <div class="page">
            <div class="oe_structure"/>
            <!-- Head -->
            <div class="row mb32" id="informations">
                <div class="col-6">
                    <div class="jumbotron text-center">
                        <h3 class="text-center">
                            <span>Our Ref.:</span>
                            <span t-field="doc.name"/>
                        </h3>
                        <div class="text-left">
                            <strong>Date Order: </strong><span t-field="doc.date_order" t-options="{'widget': 'date'}"/><br/>
                            <strong>Date Planned: </strong><span t-field="doc.date_planned" t-options="{'widget': 'date'}"/>
                        </div>
                    </div>
                </div>
                <div class="col-1"/>
                <div class="col-5">
                    <div style="font:15px lucida-console,sans-serif !important;" >
                        <span style="color:#3498DB !important;" t-field="doc.partner_id.name" /><br/>
                        <span style="color:gray !important;" t-field="doc.partner_id.street" /><br/>
                        <t t-if="doc.partner_id.street2">
                            <span style="color:gray !important;" t-field="doc.partner_id.street2" /><br/>
                        </t>
                        <span style="color:gray !important;" t-field="doc.partner_id.zip" />
                        <span style="color:gray !important;" t-field="doc.partner_id.city" /> -
                        <span style="color:gray !important;" t-field="doc.partner_id.state_id" /><br/>
                        <span style="color:gray !important;" t-field="doc.partner_id.vat" /><br/>
                    </div>
                </div>
            </div>


            <!-- Partner Data -->
            <div class="row mt32 mb32" id="informations">
                <div t-if="doc.partner_center" class="col-auto mw-100 mb-2">
                    <strong>Center Code:</strong>
                    <p class="m-0" t-field="doc.partner_center"/>
                </div>
                <div t-if="doc.partner_department" class="col-auto mw-100 mb-2">
                    <strong>Department Code:</strong>
                    <p class="m-0" t-field="doc.partner_department"/>
                </div>
                <div t-if="doc.partner_delivery_note" class="col-auto mw-100 mb-2">
                    <strong>Delivery Note:</strong>
                    <p class="m-0" t-field="doc.partner_delivery_note"/>
                </div>
                <div t-if="doc.partner_order_doc" class="col-auto mw-100 mb-2">
                    <strong>Order Doc.:</strong>
                    <p class="m-0" t-field="doc.partner_order_doc"/>
                </div>
                <div t-if="doc.partner_sale_doc" class="col-auto mw-100 mb-2">
                    <strong>Sale Doc.:</strong>
                    <p class="m-0" t-field="doc.partner_sale_doc"/>
                </div>
            </div>

            <!-- Delivery Data -->
            <div class="row">
                <div class="col-12 bg-light text-center">
                    <h5>DELIVERY DATA</h5>
                </div>
            </div>
            <div class="row mt16 mb16">
                <div class="col-6">
                    <div style="font:15px lucida-console,sans-serif !important;" >
                        <span class="text-secondary" t-field="doc.delivery_name" /><br/>
                        <span style="color:gray !important;" t-field="doc.street" /><br/>
                        <t t-if="doc.street2">
                            <span style="color:gray !important;" t-field="doc.street2" /><br/>
                        </t>
                        <span style="color:gray !important;" t-field="doc.zip" />
                        <span style="color:gray !important;" t-field="doc.city" /> -
                        <span style="color:gray !important;" t-field="doc.state_id" /><br/>
                    </div>
                </div>
                <div class="col-1"/>
                <div class="col-5">
                    <div class="text-left">
                        <t t-if="doc.phone"><strong>Phone: </strong><span t-field="doc.phone"/></t><br/>
                        <t t-if="doc.mobile"><strong>Mobile: </strong><span t-field="doc.mobile"/></t><br/>
                        <t t-if="doc.email"><strong>Email: </strong><span t-field="doc.email"/></t><br/>
                    </div>
                </div>
            </div>
            <!-- Freight Description -->
            <div class="row mt32">
                <div class="col-12 bg-light text-center">
                    <h5>FREIGHT DESCRIPTION</h5>
                </div>
            </div>
            <div class="row mt16 mb16">
                <span t-field="doc.fr_desc"/>
            </div>
            <div class="clearfix">
                <div id="total" class="row mt32" name="total">
                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                        <table class="table table-sm">
                            <tr class="border-black o_subtotal" style="">
                                <td><strong>Subtotal</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.fr_commission"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <div class="oe_structure"/>
        </div>
    </t>
</template>


    <template id="fms_freight_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="fms.fms_freight_report_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>