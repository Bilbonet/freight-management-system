<?xml version="1.0"?>
<odoo>
    <!-- Menus -->
    <menuitem id="fms_main_menu" name="F.M.S"
              web_icon="fms,static/description/icon.png"/>

    <!--<menuitem id="menu_tsm_search" name="Search"-->
              <!--parent="tsm_main_menu"-->
              <!--groups="base.group_no_one,tsm_base.group_tsm_user"-->
              <!--sequence="4"/>-->

    <menuitem id="fms_config_menu" name="Configuration"
              parent="fms_main_menu"
              groups="fms.group_fms_manager"
              sequence="100"/>

    <!-- Freight Views -->
    <record id="fms_freight_tree_view" model="ir.ui.view">
        <field name="name">fms.freight.tree</field>
        <field name="model">fms.freight</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree string="Freights" decoration-warning="state == 'partial'" decoration-info="state == 'received'" decoration-success="state == 'confirmed'"
                  decoration-muted="state=='cancel'">
                <field name="user_id"/>
                <field name="name"/>
                <field name="date_order" widget='date'/>
                <field name="partner_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="fms_freight_form_view" model="ir.ui.view">
        <field name="name">fms.freight.form</field>
        <field name="model">fms.freight</field>
        <field name="arch" type="xml">
            <form string="Freight">
                <header>
                    <button icon="fa-times" name="action_cancel" states="draft,partial,received,confirmed"
                            string="Cancel" type="object" groups="fms.group_fms_manager"/>
                    <button icon="fa-reply" name="action_cancel_draft" states="cancel" string="Set to Draft" type="object"/>
                    <button class="oe_highlight" icon="fa-frown-o" name="action_partial" states="draft,received" string="Partial" type="object"/>
                    <button class="oe_highlight" icon="fa-thumbs-up" name="action_receive" states="draft,partial" string="Receive" type="object"/>
                    <button class="oe_highlight" icon="fa-check-square-o" name="action_confirm" states="received" string="Confirm" type="object"/>
                    <button class="oe_highlight" icon="fa-lock" name="action_close" states="confirmed" string="Close" type="object"/>
                    <button class="oe_highlight" icon="fa-unlock" name="action_reopen" states="closed" string="Re-Open" type="object"/>
                    <button icon="fa-send-o" name="action_send_email" type="object" string="Send Email" groups="fms.group_fms_manager"/>
                    <field name="state" statusbar_visible="draft,partial,received,confirmed,closed" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <label for="name" attrs="{'invisible':[('name','=', False)]}" class="oe_inline" string="Freight - " style="font-size:30px;"/>
                        <field class="oe_inline" name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="user_id" string="Freight Admin"
                                   options='{"no_open": True, "no_create": True}'
                                   attrs="{'readonly':[('state','in',('cancel'))]}"
                                   groups="fms.group_fms_manager"/>
                        </group>
                        <group>
                            <field attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}" groups="base.group_multi_currency" name="currency_id"/>
                        </group>
                    </group>
                    <group string="Customer Data">
                        <group>
                            <field attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}" domain="[('customer','=',True), ('is_company', '=', True)]" name="partner_id"/>
                            <field attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}" name="date_order"/>
                        </group>
                        <group>
                            <group>
                                <field attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}" name="partner_center"/>
                                <field attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}" name="partner_department"/>
                            </group>
                            <group>
                                <field attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}" name="partner_delivery_note"/>
                                <field attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}" name="partner_order_doc"/>
                                <field attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}" name="partner_sale_doc"/>
                            </group>
                        </group>
                    </group>
                    <group string="Delivery Data">
                        <group>
                            <field name="delivery_name" attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"
                                       attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"
                                       attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                                <field name="zip_id" placeholder="Location completion" class="oe_edit_only"
                                       options="{'create_name_field': 'city', 'no_open': True, 'no_create': True}"
                                       attrs="{'invisible':[('state','in',('confirmed','closed','cancel'))]}"/>
                                <field name="city" placeholder="City" class="o_address_city"
                                       attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'
                                       context="{'country_id': country_id, 'zip': zip}"
                                       attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"
                                       attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"
                                       options='{"no_open": True, "no_create": True}'
                                       attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                            </div>
                        </group>
                        <group>
                            <field name="phone" widget="phone" attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                            <field name="mobile" widget="phone" attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                            <field name="email" widget="email" context="{'gravatar_image': True}" attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                        </group>
                    </group>
                    <group string="Freight Description">
                        <group>
                            <field name="fr_desc" type="html" nolabel="1" attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                        </group>
                        <group>
                            <group>
                                <field name="fr_packages" attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                                <label string="% commission" for="fr_commission_percent"/>
                                <field name="fr_commission_percent" nolabel="1" attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                            </group>
                            <group>
                                <field name="fr_value" attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                                <field name="fr_commission" attrs="{'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                            </group>
                        </group>
                    </group>
                    <group string="Freight Delivery" attrs="{'invisible':[('state','in',('draft','partial'))]}">
                        <group>
                             <field name="date_planned" attrs="{'required':[('state', 'in',('received','confirmed','closed'))],
                                                                'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                        </group>
                        <group>
                             <field name="responsible_id" options='{"no_open": True, "no_create": True}'
                                    attrs="{'required':[('state','in',('received','confirmed','closed'))],
                                            'readonly':[('state','in',('confirmed','closed','cancel'))]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="commissions" string="Commissions" attrs="{'invisible':[('state','in',('draft','partial','received'))]}">
                            <field name="commission_line_ids">
                                <tree string="Commissions" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="date"/>
                                    <field name="user_id" options='{"no_open": True, "no_create": True}'/>
                                    <field name="product_id"
                                           domain="[('fms_commission', '=', True)]"
                                           options='{"no_open": True, "no_create": True}'/>
                                    <field name="amount" sum="Total Amount" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                    <field name="currency_id" invisible="1"/>
                               </tree>
                            </field>
                        </page>
                        <page name="information" string="Other Information">
                            <group>
                                <field name="privacy_visibility" widget="radio"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="fms_freight_filter_view" model="ir.ui.view">
        <field name="name">fms.freight.filter</field>
        <field name="model">fms.freight</field>
        <field name="arch" type="xml">
            <search string="Search Freights">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_order" string="Freight date"/>
                <field name="responsible_id"/>
                <filter string="Pending" name="pending" domain="[('state','=','draft')]"/>
                <filter string="Partial" name="partial" domain="[('state','=','partial')]"/>
                <filter string="Received" name="received" domain="[('state','=','received')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state','!=','cancel')]"/>
                <filter string="Not Cancelled" name="not_cancelled" domain="[('state','!=','cancel')]"/>
                <separator/>
                <filter string="From this month" name="this_month" domain="[('date_order','&gt;=', time.strftime('%Y-%m-01'))]"/>
                <filter string="My Freights" name="my_freights" domain="[('user_id','=',uid)]"/>
                <filter string="Customer" name="customer" context="{'group_by':'partner_id'}"/>
                <filter string="State" name="state" context="{'group_by':'state'}"/>
                <filter string="Order Date" name="order_date" context="{'group_by':'date_order'}"/>
                <filter string="Responsible" name="responsible" context="{'group_by':'responsible_id'}"/>
            </search>
        </field>
    </record>

    <!-- Freight Actions -->
    <record id="fms_freight_action_from_menu" model="ir.actions.act_window">
        <field name="name">Freight</field>
        <field name="res_model">fms.freight</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="search_view_id" ref="fms_freight_filter_view"/>
        <!--<field name="view_id" ref="tsm_task_kanban_view"/>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new freight
            </p>
            <p>
                Freight Management System allows you to manage the pipeline of your freight delivery efficiently.
                You can track progress, discuss, attach documents, etc.
            </p>
        </field>
    </record>
    <!-- Freight Menus -->
    <menuitem id="fms_freight_menu" action="fms_freight_action_from_menu"
        name="Freight"
        parent="fms.fms_main_menu"
        sequence="1"/>
</odoo>